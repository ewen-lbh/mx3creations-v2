doctype html
{% load static %}
head
  include includes/head.pug
  title {% block title %}{%endblock%}
body
  .site-bg(style="background-image:url('/static/{% block site_bg %}corepages/images/misc/background-fade.png{% endblock %}');opacity:{%block site_bg_opacity %}0.15{% endblock %}")
  include includes/menu.pug

  {% block content %}
  {% endblock content %}

  {% block backtotop %}
  .sep.sep
  p.center: a.underline(href="javascript:window.scrollTo(0,0)") Back to top
  {% endblock backtotop %}

  include includes/footer.pug
  script(src='https://cdn.jsdelivr.net/npm/typed.js@2.0.9')
  {% block typedtitles %}
  script.
    var typedTitle = new Typed("#typedTitle", {
        stringsElement: "#typedTitleSource",
        typeSpeed: 50,
        backSpeed: 25,
        backDelay:2800,
    });
  {% endblock %}