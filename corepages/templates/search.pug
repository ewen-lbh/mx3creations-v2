{% extends 'base.pug' %}
{% load static %}
{% block title %}{{ page_title }}{% endblock title %}
{% block content %}
.main-content
  h1
    if search_query
      | You searched for: 
      br/
      span#typedTitleSource
        p= search_query
      span#typedTitle
    else
      | You did not search for anything

  if search_query
    h2
      if results_count 
        |#[span.number=results_count] results were found
      else
        | No results found.
    .sep
  
  if results_count or not search_query
    ul.results
      h3 Collections
      ul.search-results-collections
        for collection in collections
          li
            a(href="{% url 'track' title=collection.slug %}")
              .cover(style="background-image:url('{% static 'music/images/square/' %}')")
      h3 Tracks
      ul.search-results-tracks
        for track in tracks
          li
            a(href="{% url 'track' title=track.collection.slug play=track.slug %}")


  if not search_query or not results_count
    p That's sad. Wanna try #[a.underline(href="listen/random") something exciting] ?
{% endblock content %}

{% block typedtitles %}
script.
  var typedTitle = new Typed("#typedTitle", {
      stringsElement: "#typedTitleSource",
      typeSpeed: 25,
  });
{% endblock typedtitles %}