{% extends 'base.pug' %}
{% load static i18n %}
{% block title %}{{ page_title }}{% endblock title %}
{% block content %}
.main-content
  h1
    span#typedTitleSource
      if sent
        p {% trans "Your message was sent" %}
      else
        if send_error
          p=send_error
        else
          p {% trans "Contact me" %}
    span#typedTitle

  if send_error
    p.details {% trans "If you can't send a message, please contact me using <a class='underline' href='#other-means'> these means </a>" %}

  form(action="{% url 'contact' %}", method="post").grid-form.form-contact
    {% csrf_token %}
    !=form
    input(type="submit", value='{% trans "Send" %}')
  .sep

  h2#other-means 
    if send_error
      | {% trans "Sorry for the inconvenience." %}
    else
      | {% trans "Want other means of contact?" %}
  ul.contact-means
    li
      a.underline(href="https://discord.gg/a2Yqd3j") Discord
      span.fw300  ({% trans "french server" %})
    li
      a.underline(href="https://twitter.com/mx3_fr") Twitter
    li
      a.underline(href="https://reddit.com/u/Chroneis") Reddit
    li
      a.underline(href="mailto:ewen.lebihan7@gmail.com") Email
      span.fw300  (ewen.lebihan7@gmail.com)

script(src="{% static 'corepages/scripts/form-checkboxes.js' %}")
{% endblock content %}